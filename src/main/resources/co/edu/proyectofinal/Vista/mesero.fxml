<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.proyectofinal.Controlador.ControladorMesero">
   <children>
      <Label text="Tipo de Producto:" />
      <ComboBox fx:id="tipoProductoComboBox" />

      <Label text="Nombre:" />
      <TextField fx:id="nombreTextField" />

      <Label text="Precio:" />
      <TextField fx:id="precioTextField" />

      <Label text="Especificación 1:" />
      <TextField fx:id="especificacion1TextField" />

      <Label text="Especificación 2:" />
      <TextField fx:id="especificacion2TextField" />

      <Button text="Agregar Producto" onAction="#agregarProducto" />

      <Label text="Orden:" />
      <ListView fx:id="ordenListView" />

      <Label text="Estado de la Orden:" />
      <ComboBox fx:id="estadoComboBox" />

      <Button text="Actualizar Estado" onAction="#actualizarEstadoOrden" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
